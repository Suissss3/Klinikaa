<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Date -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date:"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:paddingTop="4dp"/>
        <EditText
            android:id="@+id/etDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Click to select date"
            android:focusable="false"
            android:background="@drawable/edittext_white"
            android:textColor="#FF0000"
            android:textColorHint="@android:color/darker_gray"/>

        <!-- Type of Visit -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type of Visit:"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:paddingTop="8dp"/>
        <EditText
            android:id="@+id/etType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter type of visit"
            android:background="@drawable/edittext_white"
            android:textColor="#FF0000"
            android:textColorHint="@android:color/darker_gray"/>

        <!-- Diagnosis -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diagnosis:"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:paddingTop="8dp"/>
        <EditText
            android:id="@+id/etDiagnosis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter diagnosis"
            android:background="@drawable/edittext_white"
            android:textColor="#FF0000"
            android:textColorHint="@android:color/darker_gray"/>

        <!-- Treatment -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Treatment/Prescription:"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:paddingTop="8dp"/>
        <EditText
            android:id="@+id/etTreatment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter treatment/prescription"
            android:background="@drawable/edittext_white"
            android:textColor="#FF0000"
            android:textColorHint="@android:color/darker_gray"/>

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textColor="@android:color/white"
            android:background="@drawable/button_dark_holo_red"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>