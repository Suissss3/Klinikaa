<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg">

    <!-- Appointment Date -->
    <EditText
        android:id="@+id/edtAppointmentDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Appointment Date"
        android:focusable="false"
        android:clickable="true"
        android:inputType="none"
        android:background="@drawable/edittext_white"
        android:textColor="#FF0000"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginBottom="12dp"/>

    <!-- Appointment Reason -->
    <EditText
        android:id="@+id/edtAppointmentReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Reason for Appointment"
        android:background="@drawable/edittext_white"
        android:textColor="#FF0000"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginBottom="16dp"/>

    <!-- Save/Book Button -->
    <Button
        android:id="@+id/btnBookAppointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book Appointment"
        android:textColor="@android:color/white"
        android:background="@drawable/button_dark_holo_red"/>
</LinearLayout>